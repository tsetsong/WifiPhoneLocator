<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:visibility="invisible" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toggle_button_1"
        android:textOn="Vibrate On"
        android:textOff="Vibrate Off"
        android:layout_gravity="center_horizontal"

        android:onClick="changeVibrateState"
        android:layout_below="@+id/result_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp" />

     <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:textOff="Wifi Off"
         android:textOn="Wifi On"
         android:id="@+id/toggle_button_2"
         android:layout_gravity="center_horizontal"
         android:layout_below="@+id/toggle_button_1"
         android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello world"
        android:id="@+id/result_text"
        android:layout_gravity="center_horizontal"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/toggle_button_1"
        android:layout_alignStart="@+id/toggle_button_1" />

</RelativeLayout>
